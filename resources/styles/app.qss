/* List View Styling */
QListView {
    background: #1f1f1f;
    border: none;
    outline: none;
    color: #e0e0e0;
    font-size: 13px;
    padding: 8px 4px;
    selection-background-color: transparent;
    show-decoration-selected: 0;
}

QListView::item {
    padding: 8px 12px;
    border-radius: 8px;
    margin: 2px 4px;
    min-height: 24px;
}

QListView::item:hover {
    background: rgba(255, 255, 255, 0.08);
}

QListView::item:selected {
    background: rgba(0, 122, 255, 0.2);
    color: #ffffff;
}

/* Text Editor Styling */
QTextEdit, QPlainTextEdit {
    background: #1a1a1a;
    border: none;
    outline: none;
    color: #e0e0e0;
    font-size: 14px;
    line-height: 1.5;
    padding: 16px 20px;
    selection-background-color: rgba(0, 122, 255, 0.3);
    selection-color: #ffffff;
}

QTextEdit:focus, QPlainTextEdit:focus {
    background: #1a1a1a;
}

/* Scrollbar Styling */
QScrollBar:vertical {
    background: transparent;
    width: 12px;
    margin: 0px;
}

QScrollBar::handle:vertical {
    background: #404040;
    border-radius: 6px;
    min-height: 20px;
    margin: 2px;
}

QScrollBar::handle:vertical:hover {
    background: #505050;
}

QScrollBar::handle:vertical:pressed {
    background: #606060;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: transparent;
}

QScrollBar:horizontal {
    background: transparent;
    height: 12px;
    margin: 0px;
}

QScrollBar::handle:horizontal {
    background: #404040;
    border-radius: 6px;
    min-width: 20px;
    margin: 2px;
}

QScrollBar::handle:horizontal:hover {
    background: #505050;
}

QScrollBar::handle:horizontal:pressed {
    background: #606060;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0px;
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
    background: transparent;
}

/* Status Bar Styling */
QStatusBar {
    background: #2d2d2d;
    border-top: 1px solid #404040;
    color: #999999;
    font-size: 12px;
    padding: 4px 12px;
}

/* Menu Styling */
QMenu {
    background: #2d2d2d;
    border: 1px solid #404040;
    border-radius: 8px;
    padding: 4px 0px;
    color: #e0e0e0;
    font-size: 13px;
}

QMenu::item {
    padding: 8px 16px;
    border-radius: 4px;
    margin: 1px 4px;
}

QMenu::item:selected {
    background: rgba(0, 122, 255, 0.2);
    color: #ffffff;
}

QMenu::separator {
    height: 1px;
    background: #404040;
    margin: 4px 8px;
}

/* Dialog Styling */
QDialog {
    background: #2d2d2d;
    color: #e0e0e0;
}

QDialog QPushButton {
    background: #007aff;
    border: none;
    border-radius: 6px;
    padding: 8px 16px;
    color: #ffffff;
    font-weight: 500;
    min-height: 20px;
}

QDialog QPushButton:hover {
    background: #0056cc;
}

QDialog QPushButton:pressed {
    background: #004499;
}

QDialog QPushButton:disabled {
    background: #404040;
    color: #666666;
}

QDialog QLineEdit {
    background: #3a3a3a;
    border: 1px solid #505050;
    border-radius: 6px;
    padding: 8px 12px;
    color: #ffffff;
    font-size: 13px;
}

QDialog QLineEdit:focus {
    border-color: #007aff;
    background: #404040;
}

/* Message Box Styling */
QMessageBox {
    background: #2d2d2d;
    color: #e0e0e0;
}

QMessageBox QPushButton {
    background: #007aff;
    border: none;
    border-radius: 6px;
    padding: 8px 16px;
    color: #ffffff;
    font-weight: 500;
    min-height: 20px;
}

QMessageBox QPushButton:hover {
    background: #0056cc;
}

QMessageBox QPushButton:pressed {
    background: #004499;
}

/* Custom Note List Styling */
#NotesList {
    background: #1f1f1f;
    border: none;
    outline: none;
    padding: 8px 4px;
}

#NotesList::item {
    padding: 12px 16px;
    border-radius: 10px;
    margin: 3px 6px;
    min-height: 28px;
}

#NotesList::item:hover {
    background: rgba(255, 255, 255, 0.1);
}

#NotesList::item:selected {
    background: rgba(0, 122, 255, 0.25);
}

/* Focus indicators */
QWidget:focus {
    outline: none;
}

QTreeView:focus,
QListView:focus,
QTextEdit:focus,
QPlainTextEdit:focus {
    border: none;
    outline: none;
}



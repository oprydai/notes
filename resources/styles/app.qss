/* Modern Apple Notes-inspired dark theme with enhanced UI/UX */

/* Global Styles */
* {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

QMainWindow { 
    background: #1a1a1a; 
    color: #ffffff;
}

/* Title Bar Styling */
QMainWindow::title {
    background: #2d2d2d;
    color: #ffffff;
    padding: 8px;
    font-weight: 500;
}

QMainWindow::title-bar {
    background: #2d2d2d;
    color: #ffffff;
}

QMainWindow::title-bar-text {
    color: #ffffff;
    font-weight: 500;
}

QMainWindow::title-bar-button {
    background: transparent;
    border: none;
    color: #ffffff;
}

QMainWindow::title-bar-button:hover {
    background: rgba(255, 255, 255, 0.1);
}

QMainWindow::title-bar-button:pressed {
    background: rgba(255, 255, 255, 0.2);
}

/* Toolbar Styling */
QToolBar {
    background: linear-gradient(to bottom, #2d2d2d, #252525);
    border: none;
    border-bottom: 1px solid #404040;
    padding: 8px 12px;
    spacing: 8px;
    min-height: 24px;
}

QToolBar QToolButton {
    background: transparent;
    border: 1px solid transparent;
    border-radius: 6px;
    padding: 6px 12px;
    color: #e0e0e0;
    font-weight: 500;
    min-height: 20px;
}

QToolBar QToolButton:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
}

QToolBar QToolButton:pressed {
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.3);
}

QToolBar QToolButton:disabled {
    color: #666666;
}

QToolBar QLineEdit {
    background: #3a3a3a;
    border: 1px solid #505050;
    border-radius: 8px;
    padding: 6px 12px;
    color: #ffffff;
    font-size: 13px;
    min-height: 20px;
}

QToolBar QLineEdit:focus {
    border-color: #007aff;
    background: #404040;
}

QToolBar QLineEdit::placeholder {
    color: #999999;
}

/* Splitter Styling */
QSplitter::handle {
    background: #404040;
    width: 1px;
    margin: 0px;
}

QSplitter::handle:hover {
    background: #505050;
}

QSplitter::handle:pressed {
    background: #606060;
}

/* Tree View Styling */
QTreeView {
    background: #1f1f1f;
    border: none;
    outline: none;
    color: #e0e0e0;
    font-size: 13px;
    padding: 8px 0px;
    selection-background-color: transparent;
    show-decoration-selected: 0;
}

QTreeView::item {
    padding: 6px 12px;
    border-radius: 6px;
    margin: 1px 4px;
    min-height: 20px;
}

QTreeView::item:hover {
    background: rgba(255, 255, 255, 0.08);
}

QTreeView::item:selected {
    background: rgba(0, 122, 255, 0.2);
    color: #ffffff;
}

QTreeView::item:selected:active {
    background: rgba(0, 122, 255, 0.3);
    color: #ffffff;
}

QTreeView::item:selected:!active {
    background: rgba(0, 122, 255, 0.25);
    color: #ffffff;
}

QTreeView::branch {
    background: transparent;
}

